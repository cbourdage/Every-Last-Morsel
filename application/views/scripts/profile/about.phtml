        <h2>About <?= $user->getFirstname(); ?></h2>
        <div id="about" class="blocked-content about-me">
            <?php echo $this->partial('partials/user/about.phtml', array('user' => $user)); ?>
        </div>
    <?php else : ?>
        <h3>Share a little about yourself. Everyone's eager to hear more!</h3>
    <?php endif; ?>
</div>