
<div id="step-1">
	<h4>Fantastic! What do you think about this location?</h4>
	<div class="form-message no-display"></div>
	<p class="buttons"><button id="isA">Is a Garden</button><button id="shouldBeA">Should be a Garden</button></p>
</div>
<script>
jQuery('#step-1').find('button').on('click', function(e) {
	jQuery.ajax({
		url: '/index/authenticate/',
		data: 'type=' + jQuery(this).attr('id'),
		success: function(response) {
			if (typeof response == 'object') {
				if (response.success) {
					window.location = response.location;
				} else {
					jQuery('.form-message', '#step-3').html(response.message).fadeIn();
				}
			} else {
				jQuery('#overlayMap').find('.content').html(response);
				//ResizeOverlay(jQuery('#overlayMap'));
			}
		},
		error: function() {
			alert('error in request');
		},
		exception: function() {
			alert('error in request');
		}
	});
});
</script>
